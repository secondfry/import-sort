{
  "private": true,
  "scripts": {
    "build": "tsc -b packages",
    "build:watch": "tsc -b packages -w",
    "clean:build": "lerna exec -- rimraf lib",
    "test": "mocha --require ts-node/register --recursive \"packages/*/test/**/*.ts\"",
    "test:watch": "mocha -w --require ts-node/register --recursive \"packages/*/test/**/*.ts\"",
    "lint": "eslint --ext ts packages/*/src"
  },
  "lint-staged": {
    "*.ts": [
      "forked-import-sort-cli --write",
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.20.10",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "forked-import-sort-cli": "file:packages/import-sort-cli",
    "husky": "^6.0.0",
    "import-sort-style-module-tsconfig": "^1.2.1",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "importSort": {
    ".js, .ts": {
      "parser": "typescript",
      "style": "module-tsconfig"
    }
  }
}
